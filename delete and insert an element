    <div>
        <div class="main">
            <div class="center">
                <div class="first">
                    <button onclick="create()">Create</button>
                    <button onclick="deleteFirst()">Delete First</button>
                    <button onclick="deleteAll()">Delete All</button>
                </div>
                <div class="second">

                </div>
            </div>
        </div>
    </div>
    <script>
        var center = document.querySelector(".center")
        var first = document.querySelector(".first")
        var second = document.querySelector(".second")
        count=1
        function create(){
            var p = document.createElement("p")
            p.innerHTML=` This is Paragraph p${count}<button onclick="deleteItem('p${count}')">delete</button>`
            p.id=(`p${count}`)
            count++
            second.appendChild(p)

        }
        function deleteItem(id){
            var p =document.getElementById(id)
            second.removeChild(p)
            
          
        }
        function deleteFirst(id){
            if(second.childNodes[1])
            second.removeChild(second.childNodes[1])

        }
        function deleteAll(){
           center.removeChild(second)
           second=document.createElement("div")
           second.classList.add("second")
           center.appendChild(second)
        }
    </script>
